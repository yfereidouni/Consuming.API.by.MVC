@model List<Movie>

<h1>Movies List</h1>
<hr />

<table class="table table-bordered table-hover table-light table-striped">
    <thead class="table-info">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Count == 0)
        {
            <tr>
                <td colspan="3">No Movies!</td>
            </tr>
        }
        else
        {
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Title</td>
                    <td>@movie.Genre</td>
                </tr>
            }
        }
    </tbody>
</table>